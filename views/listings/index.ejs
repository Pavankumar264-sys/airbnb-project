<%layout("/layouts/boilerplate")%>
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;

  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 1.7rem;
    opacity: 0.7;
    flex-shrink: 0;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.75rem;
    padding: 1rem;
    margin-left: 4rem;
    margin-top: 1rem;
    margin-bottom: 1.4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 250px;
    flex-shrink: 0;

  }
   @media (max-width: 768px) {
    #filters {
      justify-content: center;
    }

    .filter {
      flex: 1 1 45%; /* Allows wrapping in two columns */
      margin-right: 1rem;
      margin-top: 1rem;
    }

    .tax-toggle {
      width: 100%; /* Make it take full width on small screens */
      justify-content: center;
      padding: 0.5rem;
    }

    .form-check-label {
      font-size: 0.8rem;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .filter {
      flex: 1 1 100%; /* Stack filters vertically */
    }

    .tax-toggle {
      padding: 0.5rem;
      font-size: 0.8rem;
    }
  }

</style>
<body>
